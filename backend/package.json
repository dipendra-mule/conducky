{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "nodemon index.js",
    "dev:ts": "nodemon --exec ts-node index.ts",
    "start": "node dist/index.js",
    "start:ts": "node dist/index.js",
    "seed": "node prisma/seed.js",
    "seed:roles": "node prisma/unified-roles-seed.js",
    "sample-data": "node prisma/sample-data-seed.js",
    "migrate:events-to-orgs": "node scripts/migrate-events-to-organizations.js",
    "migrate:fix-state": "node scripts/fix-migration-state.js",
    "migrate:unified-roles": "node scripts/migrate-to-unified-roles.js",
    "migrate:encrypt-security": "node scripts/migrate-encryption-security.js",
    "migrate:encrypt-security:dry-run": "node scripts/migrate-encryption-security.js --dry-run",
    "migrate:phase1-encryption": "node scripts/migrate-phase1-encryption.js",
    "migrate:phase1-encryption:dry-run": "node scripts/migrate-phase1-encryption.js --dry-run",
    "migrate:phase1-encryption:validate": "node scripts/migrate-phase1-encryption.js validate",
    "migrate:phase2-encryption": "node scripts/migrate-phase2-encryption.js",
    "migrate:phase2-encryption:dry-run": "node scripts/migrate-phase2-encryption.js --dry-run",
    "test": "jest",
    "test:ci": "jest --coverage --reporters=default --reporters=jest-junit",
    "test:coverage": "jest --coverage",
    "test:ctrf": "jest --ci",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "swagger:generate": "swagger-jsdoc -d swagger.config.js -o swagger.json src/routes/*.ts",
    "docs:serve": "echo 'Swagger docs are available at http://localhost:3001/api-docs when the server is running' && echo 'Run: npm run dev' && echo 'Then visit: http://localhost:3001/api-docs'",
    "docs:open": "open http://localhost:3001/api-docs"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@types/helmet": "^0.0.48",
    "@types/jsdom": "^21.1.7",
    "@types/morgan": "^1.9.10",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "latest",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.25.0",
    "jsdom": "^26.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.3",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.2",
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "jest-ctrf-json-reporter": "^0.0.9",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.9.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
